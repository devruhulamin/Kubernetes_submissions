{{define "content"}}
<div class="row mb-4">
    <div class="col d-flex justify-content-between align-items-center">
        <h1>My Tasks</h1>
        <a href="/create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> New Task
        </a>
    </div>
</div>

<div class="row">
    {{if .Todos}}
        {{range .Todos}}
        <div class="col-md-6 col-lg-4 mb-3">
            <div class="card h-100 {{if .Completed}}border-success{{end}}">
                <div class="card-body">
                    <h5 class="card-title text-truncate">
                        {{if .Completed}}
                            <i class="bi bi-check-circle-fill text-success"></i>
                        {{else}}
                            <i class="bi bi-circle text-secondary"></i>
                        {{end}}
                        <a href="/view/{{.ID}}" class="text-decoration-none text-dark">{{.Title}}</a>
                    </h5>
                    <p class="card-text text-muted text-truncate">{{.Description}}</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 d-flex justify-content-end gap-2">
                    <a href="/view/{{.ID}}" class="btn btn-sm btn-outline-primary">View</a>
                    <a href="/update/{{.ID}}" class="btn btn-sm btn-outline-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{end}}
    {{else}}
        <div class="col-12 text-center py-5">
            <div class="text-muted mb-3">
                <i class="bi bi-clipboard" style="font-size: 3rem;"></i>
            </div>
            <h3>No tasks found</h3>
            <p>Get started by creating your first todo item!</p>
            <a href="/create" class="btn btn-primary">Create Todo</a>
        </div>
    {{end}}
</div>
{{end}}