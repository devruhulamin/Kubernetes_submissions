{{define "content"}}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="mb-3">
            <a href="/" class="text-decoration-none text-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <h2 class="h4 mb-0">
                    {{if .Todo.Completed}}
                        <span class="badge bg-success me-2">Done</span>
                    {{else}}
                        <span class="badge bg-warning text-dark me-2">Pending</span>
                    {{end}}
                    {{.Todo.Title}}
                </h2>
                <div class="dropdown">
                    <button class="btn btn-link text-secondary" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/update/{{.Todo.ID}}">Edit</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <!-- Typically Delete uses a form to support DELETE method spoofing or just POST -->
                        <li>
                            <form action="/delete/{{.Todo.ID}}" method="POST" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="dropdown-item text-danger">Delete</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <h6 class="text-muted">Description</h6>
                <p class="card-text fs-5">{{.Todo.Description}}</p>
                
                <div class="mt-4 text-muted small">
                    <i class="bi bi-clock"></i> Created: {{.Todo.CreatedAt}}
                </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-end">
                <a href="/update/{{.Todo.ID}}" class="btn btn-primary">Edit Task</a>
            </div>
        </div>
    </div>
</div>
{{end}}